		String sub = "Test";
        String original = "Kushal is preparing a Test for automation testing";

        // List to store the indexes of occurrences
        ArrayList<Integer> indexes = new ArrayList<>();

        // Search for occurrences of the substring
        int index = original.indexOf('t');
        while (index >= 0) {
            indexes.add(index);
            index = original.indexOf(sub, index + 1); // Move to the next occurrence
        }

        // Print occurrences and indexes
        if (indexes.isEmpty()) {
            System.out.println("Substring not found.");
        } else {
            System.out.println("Occurrences of '" + sub + "' found at indexes: " + indexes);
        }
				

	}

}
